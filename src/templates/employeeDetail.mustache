{{#employee}}
<h1 class='d-inline-block'>Detail zaměstnance {{name}} {{surname}}</h1>
{{#userIsAdmin}}
<a href='/employee/update.php?employeeId={{employee_id}}' class='btn edit-btn' aria-label='edit'></a>
{{/userIsAdmin}}
{{/employee}}
<dl>
{{#employee}}
    <dt>Jméno</dt>
    <dd>{{name}}</dd>

    <dt>Příjmení</dt>
    <dd>{{surname}}</dd>

    <dt>Login</dt>
    <dd>{{login}}</dd>

    <dt>Plat</dt>
    <dd>{{wage}}</dd>

    <dt>Pozice</dt>
    <dd>{{job}}</dd>
{{/employee}}

    <dt>Admin</dt>
    <dd>{{#employee.admin}}true{{/employee.admin}}{{^employee.admin}}false{{/employee.admin}}</dd>

    <dt>Místnost</dt>
    <dd>{{#room}}
    <a href='/room/detail.php?roomId={{room_id}}'>{{rName}}</a>
    {{/room}}</dd>

    <dt>Klíče</dt>
    {{#keys}}
        <dd>
            <a href='/room/detail.php?roomId={{room_id}}'>{{name}}</a>
        </dd>
    {{/keys}}
</dl>
